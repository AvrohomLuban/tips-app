<h1>Edit a tip</h1>

<%= form_tag "/tips/#{@tip.id}", method: :post do %>
  <div>Name:</div>
    <input type="text" name="name" value = "<%= @tip.name %>">
    <div>Location:</div>
    <input type="text" name="location" value = "<%= @tip.location %>">
    <div>Tip:</div>
    <input type="text" name="tip" value = "<%= @tip.tip %>">
  </div>
  <div>
    <input type="submit" value="Submit Edit!">
  </div>
<% end %>
