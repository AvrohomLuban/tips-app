<h1>Help us by adding new tips to our database</h1>

<%= form_tag "/tips", method: :post do %>
  <div>
    <div>Name:</div>
    <input type="text" name="name">
    <div>Location:</div>
    <input type="text" name="location">
    <div>Tip:</div>
    <input type="text" name="tip">
  </div>
  <div>
    <input type="submit" value="Submit Message!">
  </div>
<% end %>
